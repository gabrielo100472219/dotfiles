# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
	color_good = "#ffffff"
	color_degraded = "#ffffff"
	#separator = ""
}

order += "battery all"
order += "volume master"
order += "wireless _first_"
order += "disk /"
order += "memory"
order += "tztime local"

wireless _first_ {
        format_up = "WiFi: (%quality at %essid) %ip"
        format_down = "WiFi: down"
	separator = false
        separator_block_width = 20
}

battery all {
        format = "ðŸ”‹: %percentage"
	separator = false
	separator_block_width = 20
}

volume master {
        format = "â™ª: %volume"
        format_muted = "â™ª: muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
	separator = false
        separator_block_width = 20
}

disk "/" {
        format = "Disk: %avail"
	separator = false
        separator_block_width = 20
}

memory {
        format = "RAM: %used"
        threshold_degraded = "1G"
        format_degraded = "RAM < %available"
	separator = false
        separator_block_width = 20
}

tztime local {
        format = "%d-%m-%Y   %H:%M:%S  "
	separator = false
        separator_block_width = 20

}
